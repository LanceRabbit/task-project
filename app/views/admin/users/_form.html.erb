<% if @user.errors.present?%>
  <ul>
    <% @user.errors.each do |error, message| %>
      <li style="color:red"><%= t("views.users.#{error}") %>: <%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row justify-content-md-center">
  <div class="card">
    <div class="card-header text-center">
      ADD/EDIT Account
    </div>
    <div class="card-body">
      <%= simple_form_for [:admin, @user] do |f| %>
        <div class="form-group">
          <%= f.label t('views.users.name') %>
          <%= f.text_field :name, class: 'form-control', required: true  %>
        </div>

        <div class="form-group">
          <%= f.label t('views.users.email') %>
          <%= f.email_field :email, class: 'form-control', required: true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}'  %>
        </div>

        <div class="form-group">
          <%= f.label t('views.users.password') %>
          <%= f.password_field :password, class: 'form-control', required: true  %>
        </div>

        <div class="form-group">
          <%= f.label t('views.users.password_confirmation') %>
          <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <div class="float-right">
            <%= f.submit class: 'btn btn-primary' %>
            <%= link_to t('views.back'), :back, class: 'btn btn-danger' %>
          </div>
        </div>

      <% end %>
    </div>
    <div class="card-footer text-muted">
  </div>
</div>