
<h1> User List <%= link_to  t('views.user.create'), new_admin_user_path, class: 'btn btn-outline-primary' %></h1>
<div class="row">
  <div class="col-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <td>ID</td>
          <td><%= t('views.users.name') %></td>
          <td><%= t('views.users.email') %></td>
          <td><%= t('views.users.tasks_count') %></td>
          <td><%= t('views.users.role_t') %></td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.tasks_count %></td>
            <td><%= t("views.users.role.#{user.role}") %></td>
            <td>
              <%= link_to t('views.show'), admin_user_path(user), :method => "get", class: 'btn btn-info'  %>
              <%= link_to t('views.edit'), edit_admin_user_path(user), :method => "get", class: 'btn btn-primary'  %>
              <%= link_to t('views.delete'), admin_user_path(user), data: {:confirm => t('views.delete_confirm_msg')}, :method => "delete", class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @users, theme: "twitter-bootstrap-4" %>
    </div>
  </div>
</div>
