<h1> User List </h1>
<div class="row">
  <div class="col-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <td>ID</td>
          <td><%= t('views.user.name') %></td>
          <td><%= t('views.user.email') %></td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="tr_pointer" onclick="location.href='<%= admin_user_path(user) %>'">
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @users, theme: "twitter-bootstrap-4" %>
    </div>
  </div>
</div>
