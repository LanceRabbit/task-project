<div class="row">
  <div class="col-sm-3">
    <div class="card">
      <div class="card-header text-center">
        會員資訊
      </div>
      <div class="card-body">
        <p><%= t('views.user.name')%>: <%= @user.name%></p>
        <p><%= t('views.user.email')%>: <%= @user.email%></p>
      </div>
    </div>
  </div>

  <div class="col-9">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <td>ID</td>
          <td><%= t('views.tasks.title')%></td>
          <td><%= t('views.tasks.end_date')%></td>
          <td><%= t('views.tasks.created_at') %></td>
          <td><%= t('views.tasks.priority_t') %></td>
          <td><%= t('views.tasks.state_t') %></td>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.id %></td>
            <td><%= task.title %></td>
            <td><%= l(task.end_date, format: :long)%></td>
            <td><%= l(task.created_at, format: :long)%></td>
            <td><%= t("views.tasks.priority.#{task.priority}")%></td>
            <td><%= t("views.tasks.state.#{task.state}") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center mt-4">
       <%= paginate @tasks, theme: "twitter-bootstrap-4" %>
    </div>
  </div>
</div>